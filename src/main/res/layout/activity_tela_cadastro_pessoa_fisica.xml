<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaCadastroPessoaFisica">


    <TextView
        android:id="@+id/titleCadastro"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="CADASTRO DE PESSOA FISICA"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/sadjd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleCadastro">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="34dp" />

            <EditText
                android:id="@+id/editNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="53dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSexo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sexo"
                    tools:layout_editor_absoluteX="2dp"
                    tools:layout_editor_absoluteY="98dp" />

                <TextView
                    android:id="@+id/txtTel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Telefone"
                    tools:layout_editor_absoluteX="2dp"
                    tools:layout_editor_absoluteY="152dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerSexo"
                    android:layout_width="187dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    tools:layout_editor_absoluteX="2dp"
                    tools:layout_editor_absoluteY="117dp" />

                <EditText
                    android:id="@+id/editTel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints=""
                    android:ems="10"
                    android:inputType="phone"
                    tools:layout_editor_absoluteX="2dp"
                    tools:layout_editor_absoluteY="171dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtCPF"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CPF"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="216dp" />

            <EditText
                android:id="@+id/editCPF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="235dp" />

            <TextView
                android:id="@+id/txtEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Endereco"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="280dp" />

            <EditText
                android:id="@+id/editEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="299dp" />

            <TextView
                android:id="@+id/txtCidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cidade"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="344dp" />

            <EditText
                android:id="@+id/editCidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="363dp" />

            <TextView
                android:id="@+id/txtEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="408dp" />

            <Spinner
                android:id="@+id/spinnerEstado"
                android:layout_width="match_parent"
                android:layout_height="37dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="59dp"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="472dp" />

            <TextView
                android:id="@+id/txtMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="491dp" />

            <EditText
                android:id="@+id/editMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="510dp" />

            <TextView
                android:id="@+id/txtSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Digite uma senha"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="555dp" />

            <EditText
                android:id="@+id/editSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="574dp" />

            <TextView
                android:id="@+id/txtSenha2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirme_sua_senha"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="619dp" />

            <EditText
                android:id="@+id/editSenhaConfirma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="638dp" />

            <Button
                android:id="@+id/buttonCadastrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CADASTRAR"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="683dp" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>